<%- include('../../partials/header'); -%>

    <div class="container">
        <form class="row g-3 needs-validation" action="/civils/save/<%= datas.id %>" method="post">
            <div class="col-md-4">
                <label for="validationCustom01" class="form-label">nom</label>
                <input type="text" class="form-control" id="validationCustom01" name="nom" maxlength="50"
                    value="<%= datas.nom %>" required>
            </div>
            <div class="col-md-4">
                <label for="validationCustom02" class="form-label">pr√©nom</label>
                <input type="text" class="form-control" id="validationCustom02" name="prenom" maxlength="50"
                    value="<%= datas.prenom %>" required>
            </div>
            <div class="col-md-4">
                <label for="validationCustomUsername" class="form-label">tel</label>
                <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend">(555)-</span>
                    <input type="number" class="form-control" id="validationCustomUsername" name="telephone"
                        value="<%= datas.telephone %>" aria-describedby="inputGroupPrepend" required>
                </div>
            </div>

            <div class="col-md-2">
                <label for="validationCustom04" class="form-label">genre</label>
                <select class="form-select" id="validationCustom04" value="<%= datas.genre %>" name="genre" required>
                    <option value="Mr">Mr</option>
                    <option value="Mme">Mme</option>
                    <option value="Mlle">Mlle</option>
                    <option value="Autre">Autre</option>
                </select>
            </div>

            <div class="col-md-2">
                <label for="validationCustom03" class="form-label">taille</label>
                <input type="number" class="form-control" id="validationCustom03" name="tail_cm"
                    value="<%= datas.tail_cm %>" required>
            </div>

            <div class="col-md-8">
                <label for="validationCustom05" class="form-label">profession</label>
                <input type="text" class="form-control" id="validationCustom05" name="profession" maxlength="50"
                    value="<%= datas.profession %>">
            </div>

            <div class="col-md-12">
                <label for="validationCustom06" class="form-label">signe distinctif</label>
                <input type="text" class="form-control" id="validationCustom06" name="signe_distinctif" maxlength="255"
                    value="<%= datas.signe_distinctif %>">
            </div>

            <div class="col-md-6">
                <label for="validationCustom07" class="form-label">photo 1</label>
                <input type="text" class="form-control" id="validationCustom07" name="photo_1"
                    value="<%= datas.photo_1 %>">
            </div>

            <div class="col-md-6">
                <label for="validationCustom08" class="form-label">photo 2</label>
                <input type="text" class="form-control" id="validationCustom08" name="photo_2"
                    value="<%= datas.photo_2 %>">
            </div>

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        Photos 1
                    </div>
                    <div class="card-body">
                        <a href="<%= datas.photo_1 %>" target="_blank">
                            <img src="<%= datas.photo_1 %>" class="img-thumbnail float-start" alt="photo 1" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        Photos 2
                    </div>
                    <div class="card-body">
                        <a href="<%= datas.photo_2 %>" target="_blank">
                            <img src="<%= datas.photo_2 %>" class="img-thumbnail float-end" alt="photo 2" />
                        </a>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <label for="validationCustom09" class="form-label">photo 3</label>
                <input type="text" class="form-control" id="validationCustom09" name="photo_3"
                    value="<%= datas.photo_3 %>">
            </div>
            <div class="col-md-4">
                <label for="validationCustom10" class="form-label">photo 4</label>
                <input type="text" class="form-control" id="validationCustom10" name="photo_4"
                    value="<%= datas.photo_4 %>">
            </div>
            <div class="col-md-4">
                <label for="validationCustom11" class="form-label">photo 5</label>
                <input type="text" class="form-control" id="validationCustom11" name="photo_5"
                    value="<%= datas.photo_5 %>">
            </div>

            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Photos 3
                    </div>
                    <div class="card-body">
                        <a href="<%= datas.photo_3 %>" target="_blank">
                            <img src="<%= datas.photo_3 %>" class="img-thumbnail float-end" alt="photo 3" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Photos 4
                    </div>
                    <div class="card-body">
                        <a href="<%= datas.photo_4 %>" target="_blank">
                            <img src="<%= datas.photo_4 %>" class="img-thumbnail float-end" alt="photo 4" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Photos 5
                    </div>
                    <div class="card-body">
                        <a href="<%= datas.photo_5 %>" target="_blank">
                            <img src="<%= datas.photo_5 %>" class="img-thumbnail float-end" alt="photo 5" />
                        </a>
                    </div>
                </div>
            </div>


            <div class="col-12">
                <button class="btn btn-primary" type="submit">Ajouter / Modifier</button>
            </div>
        </form>
    </div>

    <%- include('../../partials/footer'); -%>