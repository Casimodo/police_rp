<%- include('../../partials/header'); -%>

    <div class="media">
        <div class="media-body">
            Civils
        </div>
    </div>

    <div class="row">

        <table id="table_civils" class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Non</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Total amendes</th>
                    <th scope="col">Impayé</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody> 
                <% for(var i=0; i < datas.length; i++) { %>
                    <tr>
                        <td>
                            <%= datas[i].nameUser %>
                        </td>
                        <td>
                            <%= datas[i].amendes %>
                        </td>
                        <td>
                            <a href="/police/rapports/<%= datas[i].civil_playerid %>" type="button" class="btn btn-secondary btn-sm"><i data-feather="eye"></i> Consulter</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

    </div>


    <script>
        $(document).ready(function() {
            $('#table_id').DataTable();
        });
    </script>

    <%- include('../../partials/footer'); -%>